# Environment Variables Template for MCP Server
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# ============================================================================
# API Authentication
# ============================================================================

# Primary API credentials
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# Alternative: Bearer token
# API_TOKEN=your_bearer_token_here

# Alternative: Basic auth
# API_USERNAME=your_username_here
# API_PASSWORD=your_password_here

# ============================================================================
# API Configuration
# ============================================================================

# API base URL (if configurable)
API_BASE_URL=https://api.example.com

# API version (if applicable)
# API_VERSION=v1

# Timeout settings (in seconds)
# API_TIMEOUT=30

# ============================================================================
# Database Configuration (if applicable)
# ============================================================================

# DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=your_database
# DATABASE_USER=your_user
# DATABASE_PASSWORD=your_password

# ============================================================================
# Rate Limiting & Performance
# ============================================================================

# Maximum requests per second
# MAX_REQUESTS_PER_SECOND=10

# Maximum concurrent requests
# MAX_CONCURRENT_REQUESTS=5

# Retry attempts on failure
# MAX_RETRIES=3

# ============================================================================
# Logging & Debugging
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable verbose logging
# VERBOSE=false

# ============================================================================
# MCP Server Configuration
# ============================================================================

# Server name (used in logs and identification)
MCP_SERVER_NAME=my-service-mcp-server

# Environment: development, staging, production
ENVIRONMENT=development

# ============================================================================
# Optional: Multi-Account Support
# ============================================================================

# If your MCP server supports multiple accounts/workspaces:
# DEFAULT_ACCOUNT_ID=account_id_here
# DEFAULT_WORKSPACE_ID=workspace_id_here

# ============================================================================
# Optional: Feature Flags
# ============================================================================

# Enable experimental features
# ENABLE_EXPERIMENTAL_FEATURES=false

# Enable caching
# ENABLE_CACHING=true
# CACHE_TTL_SECONDS=3600

# ============================================================================
# Notes
# ============================================================================

# 1. Replace all "your_*_here" values with your actual credentials
# 2. Keep this file secure - never commit to version control
# 3. Add .env to your .gitignore file
# 4. Different environments (dev/staging/prod) should use different .env files
# 5. Consider using environment-specific files: .env.development, .env.production
